extends layout

block content
    h2 Delete A Page
    for page in pages
      form.grid-small.grid-block(action='/post/'+post._id, method='post')
        h3
          a(href="/" + page.title) #{page.title}
        label Created on #{page.date}
        input(type='hidden', name='_method', value='delete')
        input(type='submit', id='delete_btn', value='Delete')
